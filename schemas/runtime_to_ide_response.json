{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Agent Runtime to IDE Response",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "enum": [
                "success",
                "error",
                "processing"
            ],
            "description": "Status of the agent execution."
        },
        "agentOutputs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "agentName": {
                        "type": "string"
                    },
                    "markdownOutput": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                },
                "required": [
                    "agentName",
                    "markdownOutput"
                ]
            }
        },
        "patchProposals": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "filePath": {
                        "type": "string"
                    },
                    "diff": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "filePath",
                    "diff"
                ]
            }
        },
        "validationStatus": {
            "type": "object",
            "properties": {
                "passed": {
                    "type": "boolean"
                },
                "errors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "status"
    ]
}